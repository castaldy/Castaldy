#include<stdio.h>
#include<math.h>

int main(){
	float sum=0,a,n,i;
	printf(" enter real number"); scanf("%f", &a);
	printf(" enter positive integer"); scanf("%f", &n);
	if(n<0){
		printf("error(enter positive integer)");
	}else{
		for(i=0;i<=n;i++){
			sum=sum+pow(-1,i)*pow(a,i);
		}
		printf(" sum = %f", sum);
	}
	return 0;
}
