#include<iostream>
using namespace std;
main(){
	double a[1000];
	int n,i;
	cout<<"enter the size of the array N(N>=1): "; cin>>n;
	for(i=1;i<=n;i++){
		cout<<"enter value "<<i<<" "; cin>>a[i];
	}
	if(n<1){ cout<<"error(please enter N>=1)";
	}else{
	cout<<"the array: ";
	for(i=1;i<=n;i++){
		cout<<a[i]<<" ";
	}
	cout<<"\n";
	cout<<"the number of its last local maximum: ";
	for(i=n-1;i>=1;i--){
		if((a[i]>a[i+1])&&(a[i]>a[i-1])){
			cout<<i;break;
		}
	}
    }  
}
