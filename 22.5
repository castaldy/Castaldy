#include <iostream>
#include <fstream>

using namespace std;

int main() {
	string currentWord;
	int i= 0;
	bool firstWordFound = false;
	fstream file("first.txt", fstream::in | fstream::app);
	if (file.fail()){
		cout << "L'ouverture de l'un des fichier a échoué. Assurez vous qu'ils existent.";
	}
	else {
	
		while (!file.eof()) {
			file >> currentWord;
			if (currentWord == "rouge" && firstWordFound) {
				i++;
				firstWordFound = false;
			}
			if (currentWord == "ligne") {
				firstWordFound = true;
			}
		}
		cout << "Le nombre de paragraphes est " << i << endl;
		file.close();
	}
}
