#include <iostream>
#include <fstream>
#include <string>
#include <cstdlib>

using namespace std;

int main() {
	int nLignes = 0;
	string currentLine;
	fstream file("first.txt", fstream::in | fstream::app);
	if (file.fail()){
		cout << "L'ouverture de l'un des fichier a échoué. Assurez vous qu'ils existent.";
	}
	else {
	
		while (getline(file, currentLine)) {
			nLignes++;	
		}
		cout << "Le nombre de paragraphes est" << nLignes << endl;
		file.close();
	}
}
